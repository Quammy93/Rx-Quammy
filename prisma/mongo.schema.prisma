datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/mongo-client"
}

model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  excerpt   String
  content   String
  category  String
  image     String?
  date      String
  readTime  String
  slug      String   @unique
  author    String?
  tags      String[]
  published Boolean
  views     Int
  likes     Int
  comments  Int
}
