datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/postgres-client"
}

model Email {
  id        Int         @id @default(autoincrement())
  to        String
  subject   String
  body      String
  status    EmailStatus @default(PENDING)
  createdAt DateTime    @default(now())
}

enum EmailStatus {
  SENT
  FAILED
  PENDING
}
